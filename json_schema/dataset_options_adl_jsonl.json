{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/dataset_options_adls_jsonl.schema.json",
  "title": "Delimited Text Dataset",
  "description": "An delimited text format described by a flat file format. CSV is a misnomer however it's consistent with spark",
  "type": "object",
  "properties": {
    "schema_versioning": {
      "type": "boolean"
    },
    "compression_type": {
      "type": "string",
      "enum": ["none"]
    },
    "row_delimiter": {
      "type": "string",
      "minLength": 1,
      "maxLength": 4
    },
    "days_retention_period": {
      "type": "integer",
      "minimum": 0
    },
    "partition_path_format": {
      "type": "string"
    },
    "partition_file_format": {
      "type": "string"
    },
    "extension": {
      "type": "string"
    },
    "format": {
      "type": "string",
      "enum": ["json"]
    },
    "dataset": {
      "type": "string"
    },
    "path": {
      "type": "string"
    },
    "data_schema": {
      "type": "object",
      "properties": {
        "spark_schema_path": {
          "type": "string"
        },
        "spark_table_schema": {
          "type": "string"
        },
        "spark_column_schema": {
          "type": "string"
        },
        "json_table_schema": {
          "type": "string"
        },
        "json_column_schema": {
          "type": "string"
        }
      },
      "required": ["spark_schema_path", "spark_table_schema"]
    }
  },
  "required": [
    "compression_type",
    "column_delimiter",
    "row_delimiter",
    "days_retention_period",
    "partition_path_format",
    "partition_file_format",
    "extension",
    "format",
    "dataset",
    "path",
    "data_schema"
  ]
}
